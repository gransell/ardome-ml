# Name: boost_filesystem
# Description: boost filesystem lib
# Version: 1.37

import os

def flags( env, prefix ):
	env.requires( 'boost' )

	env.Append( CPPDEFINES = [ 'BOOST_FILESYSTEM_DYN_LINK' ] )

	if env.debug : env.Append( LIBS = [ 'boost_filesystem-vc71-mt-gd-1_37.lib' ] )	
	else : env.Append( LIBS = [ 'boost_filesystem-vc71-mt-1_37.lib' ] )	

def install( env, prefix ):
	if env.debug : 
		env.release( [ os.path.join( prefix, 'lib', 'boost_filesystem-vc71-mt-gd-1_37.lib' ) ] )
		env.release( [ os.path.join( prefix, 'bin', 'boost_filesystem-vc71-mt-gd-1_37.dll' ) ] )
	else : 
		env.release( [ os.path.join( prefix, 'lib', 'boost_filesystem-vc71-mt-1_37.lib' ) ] )
		env.release( [ os.path.join( prefix, 'bin', 'boost_filesystem-vc71-mt-1_37.dll' ) ] )


