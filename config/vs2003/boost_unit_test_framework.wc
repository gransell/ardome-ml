# Name: boost_unit_test_framework
# Description: boost unit test lib
# Version: 1.37

import os

def flags( env, prefix ):
	env.requires('boost')

	if env.debug : env.Append( LIBS = [ 'libboost_unit_test_framework-vc71-mt-gd-1_37' ] )	
	else : env.Append( LIBS = [ 'libboost_unit_test_framework-vc71-mt-1_37' ] )	

def install( env, prefix ):
	if env.debug : env.release( [ os.path.join( prefix, 'lib', 'libboost_unit_test_framework-vc71-mt-gd-1_37.lib' ) ] )
	else : env.release( [ os.path.join( prefix, 'lib', 'libboost_unit_test_framework-vc71-mt-1_37.lib' ) ] )


