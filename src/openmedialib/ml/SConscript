Import(['local_env'])

local_env.packages( 'boost_thread', 'boost_filesystem', 'boost_system', 'build_ml', 'boost_date_time', 'libavformat', 'loki' )

#Workaround until J#AMF-2014 is resolved
if local_env['PLATFORM'] != 'win32':
	local_env.packages( 'libavutil' )

src = [ 
		'analyse.cpp',
		'analyse_dnxhd.cpp',
		'analyse_dv.cpp',
		'analyse_mpeg2.cpp',
		'audio_block.cpp',
		'audio_channel_convert.cpp',
        'audio_sample_calcs.cpp',
        'audio_utilities.cpp',
        'awi.cpp',
        'filter.cpp',
        'fix_stream.cpp',
        'frame.cpp',
        'indexer.cpp',
        'input_creator_handler.cpp',
        'io.cpp',
        'keys.cpp',
        'ml.cpp',
        'openmedialib_plugin.cpp',
        'scope_handler.cpp',
        'utilities.cpp' ]

if local_env[ 'PLATFORM' ] == 'win32':
	src.append( 'msw/medialib.rc' )
	
if local_env[ 'target' ] == 'linux32' :
    local_env.Append( CPPFLAGS = ['-march=pentium4', '-mfpmath=sse'] )

if local_env[ 'target' ] == 'gcov' :
    local_env.Append( CPPFLAGS = ['-march=pentium4', '-mfpmath=sse'] )

object = local_env.shared_library( 'openmedialib_ml', src )

local_env.release( object )

local_env.copy_files( local_env[ 'stage_profiles' ], Dir('#').abspath + '/profiles', perms = 0755 )
local_env.copy_files( local_env[ 'stage_share' ], Dir('#').abspath + '/data', perms = 0755 )

if local_env[ 'PLATFORM' ] != 'win32' :
	local_env.copy_project_files( local_env[ 'ml_include' ], 
		[ 	'analyse.hpp',
			'analyse_avc.hpp',
			'analyse_dnxhd.hpp',
			'analyse_dv.hpp',
			'analyse_mpeg2.hpp',
			'audio.hpp', 
			'audio_block.hpp', 
			'audio_cast.hpp', 
			'audio_channel_convert.hpp', 
			'audio_channel_extract.hpp', 
			'audio_convert.hpp', 
			'audio_interface.hpp', 
			'audio_mix_matrix.hpp', 
			'audio_place.hpp', 
			'audio_template.hpp', 
			'audio_types.hpp', 
			'audio_utilities.hpp', 
			'audio_volume.hpp', 
			'awi.hpp', 
			'config.hpp', 
			'filter.hpp', 
			'filter_encode.hpp', 
			'filter_simple.hpp', 
			'fix_stream.hpp', 
			'frame.hpp', 
			'input_creator_handler.hpp', 
			'input.hpp', 
			'io.hpp', 
			'indexer.hpp', 
			'keys.hpp', 
			'ml.hpp', 
			'openmedialib_plugin.hpp', 
			'stream.hpp', 
			'scope_handler.hpp', 
			'stack.hpp',
			'store.hpp', 
			'types.hpp', 
			'utilities.hpp' ] )

Return( 'object' )
