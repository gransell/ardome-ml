Import(['local_env'])

local_env.packages( 'boost_thread', 'libavformat', 'boost_date_time', 'boost_system' )
local_env.optional( 'ffmpeg' )
options = local_env.optional( 'libswscale' )

if options[ 'have_libswscale' ]: local_env.Append( CPPDEFINES = [ 'HAVE_SWSCALE' ] )

if local_env[ 'PLATFORM' ] == 'win32' :
	local_env.Append( CPPDEFINES = [ '_SCL_SECURE_NO_WARNINGS', '_CRT_SECURE_NO_WARNINGS' ] )

object = local_env.plugin( 'openmedialib_avformat', [ 'avformat_plugin.cpp', 'avformat_dv.cpp' ] )

local_env.copy_project_files( local_env[ 'stage_ml_plugin' ], object + [ 'avformat_plugin.opl' ] )

Return( 'object' )
