Import(['local_env'])

local_env.packages( 'boost_thread', 'libavformat' )

object = local_env.SharedLibrary( 'openmedialib_avformat', [ 'avformat_plugin.cpp' ] )

local_env.Install( local_env.PluginLocationOML( ), object )
local_env.Install( local_env.PluginLocationOML( ), 'avformat_plugin.opl' )

Return( 'object' )
