Import(['local_env'])

local_env.packages( 'boost_thread', 'libavformat' )
local_env.optional( 'libswscale' )

object = local_env.plugin( 'openmedialib_avformat', [ 'avformat_plugin.cpp' ] )

local_env.Install( local_env[ 'stage_ml_plugin' ], [ object, 'avformat_plugin.opl' ] )

Return( 'object' )
